<div class='row'>
<div class="span9">
<div class='alert alert-success'>
  <h3>Welcome!</h3>

  <ul>
    <% @posts.each do |post| %>
      <div class='alert alert-info'>
        <li>
          <%= link_to post.title, post_path(post) %>
          <% if logged_in? %>
          [<%= link_to 'edit', edit_post_path(post)  %>]
          <% end %>
          <br/>
          created at <%= show_datetime(post.created_at) %>
        </li>
      </div>
    <% end %>
  </ul>
</div>
</div>
</div>

