<ul class="nav">
  <li>
    <%= link_to "Click!", main_path, :class => 'brand' %>
  </li>
  <li>
    <%= link_to 'Create Post', new_post_path %>
  </li>
  <li>
    <%= link_to 'Create Category', new_category_path %>
  </li>

  <div class='btn-group nav_item'>
    <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      Categories <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category) %>
        </li>
      <% end %>
        <li class='divider'></li>
        <li>
          <% link_to(new_category_path) do %>
            <i class="icon-plus"></i>
            New Category
          <% end %>
        </li>
    </ul>
  </div>

  <li>
    <form class="navbar-search pull-right">
      <input type="text" class="search-query" placeholder="Search">
    </form>
  </li>

  <% if logged_in? %>
    <li>
      <%= link_to 'Log out', logout_path %>
    </li>
  <% else %>
    <li>
      <%= link_to 'Sign up', register_path %>
    </li>
    <li>
      <%= link_to 'Log in', login_path %>
      <% end %>
    </li>
</ul>







